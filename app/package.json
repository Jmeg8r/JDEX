{
  "name": "jdex",
  "version": "2.0.1",
  "type": "module",
  "description": "Johnny Decimal Index Manager - Personal Knowledge Organization System",
  "author": {
    "name": "James Cruce",
    "email": "james@astgl.com",
    "url": "https://astgl.com"
  },
  "license": "MIT",
  "private": false,
  "homepage": "https://github.com/Jmeg8r/JDEX#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/Jmeg8r/JDEX.git"
  },
  "bugs": {
    "url": "https://github.com/Jmeg8r/JDEX/issues"
  },
  "keywords": [
    "johnny-decimal",
    "organization",
    "productivity",
    "file-management",
    "knowledge-management"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron": "electron .",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "vite build && electron-builder"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sql.js": "^1.9.0",
    "lucide-react": "^0.263.1",
    "date-fns": "^2.30.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "vite": "^5.0.0",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "concurrently": "^8.2.0",
    "wait-on": "^7.2.0",
    "@electron/notarize": "^2.1.0"
  },
  "main": "electron/main.js",
  "build": {
    "appId": "com.astgl.jdex",
    "productName": "JDex",
    "copyright": "Copyright Â© 2024-2026 James Cruce / ASTGL",
    "afterSign": "scripts/notarize.js",
    "directories": {
      "output": "dist-electron",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "scripts/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "build/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": ["arm64", "x64"]
        },
        {
          "target": "zip",
          "arch": ["arm64", "x64"]
        }
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "dmg": {
      "title": "JDex ${version}",
      "icon": "build/icon.icns",
      "background": null,
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "icon": "build/icon.ico",
      "target": ["nsis", "portable"]
    },
    "linux": {
      "icon": "build/icon.png",
      "target": ["AppImage", "deb"],
      "category": "Office"
    }
  }
}
